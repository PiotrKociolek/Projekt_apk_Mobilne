<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupgb"
    android:orientation="vertical"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/btnbg"
        android:text="@string/zapraszamy_do_sprawdzenia_nowego_planu_polowa"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gps"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/textView3"
        android:layout_width="202dp"
        android:layout_height="64dp"

        android:layout_marginEnd="100dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/btnbg"
        android:gravity="center"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:text="@string/ok"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps"
        app:layout_constraintVertical_bias="0.554" />

    <ImageButton
        android:id="@+id/viewPdf"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/hunting"
        app:layout_constraintBottom_toTopOf="@+id/gps"
        app:layout_constraintEnd_toStartOf="@+id/aparat"
        app:layout_constraintStart_toStartOf="parent"
      />

    <ImageButton
        android:id="@+id/aparat"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/aparat_ico"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="@+id/viewPdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewPdf"
        app:layout_constraintTop_toTopOf="@+id/viewPdf" />

    <ImageButton
        android:id="@+id/latarka"
        android:layout_width="148dp"
        android:layout_height="136dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/flashlight"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/gps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/gps"
        android:layout_width="153dp"
        android:layout_height="137dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="343dp"
        android:background="@drawable/map_icon_new"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/latarka"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Polowań"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/viewPdf"
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latarka"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/latarka"
        tools:layout_editor_absoluteX="101dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Miejsca Zbiórki"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@+id/gps"
        tools:layout_editor_absoluteX="258dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aparat"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@+id/aparat"
        tools:layout_editor_absoluteX="300dp" />


</androidx.constraintlayout.widget.ConstraintLayout>